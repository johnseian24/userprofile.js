/ Declare a variable to hold the favorite number
let theFavNumber = 7; // You can change this to any favorite number

// Initialize a variable for user input
let userGuess = null;

// Use a while loop to repeatedly ask the user for a guess
while (userGuess !== theFavNumber) {
    // Get user input
    userGuess = Number(prompt("Guess my favorite number:"));

    // Check if the guess is correct, too high, or too low
    if (userGuess > theFavNumber) {
        console.log("Too high! Try again.");
    } else if (userGuess < theFavNumber) {
        console.log("Too low! Try again.");
    } else {
        console.log("Correct! You guessed my favorite number.");
    }
}
